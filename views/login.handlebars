<div class="container text-center my-5 d-flex justify-content-center align-items-center">
  <form action="/dashboard/login" method="POST" class="d-flex flex-column border p-5" style="width: 500px">
    <div class="form-group align-self-center">
      <label for="username">Username</label>
      <input name="username" type="username" class="form-control" id="username">
    </div>
    <div class="form-group align-self-center">
      <label for="password">Password</label>
      <input name="password" type="password" class="form-control" id="password">
    </div>
    <button type="submit" class="btn btn-primary align-self-center mt-3">Login</button>
  </form>
</div> 
